{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "lib": ["dom", "es5", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "Utils": ["src/scripts/utils/index.ts"]
    }
  }
}
